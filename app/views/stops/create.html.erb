<div class="stops">
  <% @res.select {|k,v| v.length != 0}.each do |k,v| %>
    <% next if v.last.nil?%>
      <div class="name-direction">
      <div> <%= v.last%>( <%= k%>):</div>
      <ul class="time-list">
      <% (v.length - 1).times do |elm| %>
        <% if v.index(v[elm]) == 0 %>
          <li class="time-first"><%= v[elm] %><span>min</span></li>
        <% else %>
          <li class="time"><%= v[elm] %><span>min</span></li>
        <% end %>
      <% end %>
      </ul>
      </div>
  <% end %>
</div>

